<h2>Follow Users</h2>
<% if @users.exists? %>
 <table class="table">
   <thead>
     <tr>
       <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <% @users.each do |user| %>
     <% book = user.books.first %>
       <tbody>
         <tr>
           <td><%= image_tag user.get_profile_image(40,40) %></td>
           <td><%= user.name %></td>
           <td>フォロー数: <%= user.followings.count %></td>
           <td>フォロワー数: <%= user.followers.count %></td>
           <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        </tbody>
    <% end %>
    </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>